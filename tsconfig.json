{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
    "isolatedModules": true,
		"noUnusedLocals": true,
		"sourceMap": true,
    "experimentalDecorators": true,
    "removeComments": true,
		"noImplicitReturns": true,
    "jsx": "react",
    "moduleResolution": "node",
		"baseUrl": "src",
		"target": "es5",
		"module": "esnext",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": [
    "node_modules",
		"dist"
  ]
}
